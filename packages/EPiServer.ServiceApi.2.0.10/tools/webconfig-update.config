<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
	<system.webServer>		
		<modules>
			<!-- Doing this in two steps (remove, then insert) ensures that we can update an existing value, or add a new one -->
			<add name="IntegrationAuthorizationModule" type="EPiServer.ServiceApi.IntegrationAuthorizationModule, EPiServer.ServiceApi" xdt:Transform="Remove" xdt:Locator="Match(name,type)" />
		</modules>
	</system.webServer>
	
	<appSettings>
		<!-- Doing this in two steps (remove, then insert) ensures that we can update an existing value, or add a new one -->
		<add key="IntegrationTokenTimeout" xdt:Transform="Remove" xdt:Locator="Match(key)" />
		<add key="IntegrationTokenTimeout" value="60" xdt:Transform="Insert" />
	</appSettings>
</configuration>