@model lightboxBlock
@using EPiServer.Core
@using Landrys.ThePostOak_EpiServer.Controllers
<div class="art-overlay">
    <div class="art-verbage" @Html.EditAttributes(x => x.HeadContent)>
        @Html.DisplayFor(x => Model.HeadContent)
    </div>
    <section id="lightbox-holder">
        <a href="@Model.ImageALarge" data-title="Luxury Retail Options" data-lightbox="retail">
            {
                <img class="art-image img-circle" alt="@Model.AltA" src="@Url.ContentUrl(Model.ImageALarge)" />
            }
            <figure @Html.EditAttributes(x => x.ImageASmall) class="home-image-flex">

                @if (Model.ImageASmall != null)
            {
                    <img class="art-image img-circle" alt="@Model.AltA" src="@Url.ContentUrl(Model.ImageASmall)" />
                }
            </figure>
        </a>
        <a href="@Model.ImageBLarge" data-title="Extended Stay" data-lightbox="retail">
