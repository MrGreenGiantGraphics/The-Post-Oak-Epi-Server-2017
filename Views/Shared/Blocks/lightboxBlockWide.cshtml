                }
            </figure>
        </a>
        <a href="@Model.ImageELarge" data-title="Luxury Hotel Rooms" data-lightbox="retail">
            <figure @Html.EditAttributes(x => x.ImageESmall) class="home-image-flex">

                @if (Model.ImageESmall != null)
            {
                    <img class="art-image img-circle" alt="@Model.AltE" src="@Url.ContentUrl(Model.ImageESmall)" />
